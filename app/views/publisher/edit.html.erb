		<h3>Edit Publisher</h3>
		<br>
        <form method="post" id="categoryForm" action="/publisher/<%= @suazo.id %>/update">
            <div class="modal-content">                
                <div class="modal-body">						
                    <div class="form-group">							
                        <label for="category" class="control-label">Publisher Name</label>							
                        <input type="text" name="name" id="name" autocomplete="off" class="form-control" placeholder="Publisher name" value="<%= @suazo.name %>">
                    </div>
                    
                    <div class="form-group">
                        <label for="status" class="control-label">Status</label>							
                        <select class="form-control" id="status" name="status">
                            <option value="">Select</option>							
                            <option value="Enable" <% if @suazo.status == 'Enable' %>selected="selected"<% end %>>Enable</option>
                            <option value="Disable" <% if @suazo.status == 'Disable' %>selected="selected"<% end %>>Disable</option>								
                        </select>							
                    </div>				       
                </div>
                <div class="modal-footer">
                    <input type="hidden" name="id" id="id" value="<%= @suazo.id %>" />					
                    <input type="hidden" name="action" id="action" value="/publisher/:id/update" />
                    <input type="submit" name="save" id="save" class="btn btn-info" value="Save" />                    
                </div>
            </div>
        </form>        
