		<h3>Publisher List</h3>
			<br>
			<div class="float-right mb-2 col-md-2">
				<button type="button" id="addCategory" class="btn btn-info" title="Add user"><span class="glyphicon glyphicon-plus">Add</span></button>
			</div>
			<table class="table table-striped">
			<thead>
			  <tr>
				<th>Sn.</th>					
				<th>Name</th>					
				<th>Status</th>											
				<th>Action</th>
			  </tr>
			</thead>
			<tbody>		  
				<% @suazo.each do |publisher| %>
					<tr>
						<td><%= publisher.id %></td>                
						<td><%= publisher.name %></td>
						<td><%= publisher.status %></td>
						<td><a href="/publisher/<%= publisher.id %>/edit" class="btn btn-primary">Edit</a></td>    
						<td><a href="/publisher/<%= publisher.id %>/destroy" class="btn btn-danger">Delete</a></td>
					</tr>
				<% end %>  
			</tbody>
