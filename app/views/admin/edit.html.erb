<div class="col-md-9 col-lg-10 main"> 
    <h3>Edit Admin</h3>
    <br>
    <form method="post" id="userForm" action="/admin/<%= @suazo.id%>/update">
        <div class="modal-content">            
            <div class="modal-body">                
                <div class="form-group">
                    <label for="country" class="control-label">Role</label>                            
                    <select class="form-control" id="role" name="role">
                        <option value="Admin" <% if @suazo.role == 'Admin' %>selected="selected"<% end %>>Admin</option>
                    </select>
                </div>

                <div class="form-group">                            
                    <label for="first name" class="control-label">First Name</label>                            
                    <input type="text" name="fname" id="fname" autocomplete="off" class="form-control" placeholder="First name" value="<%= @suazo.first_name %>"/>                                    
                </div>
                
                <div class="form-group">
                    <label for="last name" class="control-label">Last Name</label>
                    <input type="text" class="form-control" id="lname" name="lname" placeholder="Last name" value="<%= @suazo.last_name %>">            
                </div>

                <div class="form-group">
                    <label for="email" class="control-label">Email</label>
                    <input type="email" class="form-control" id="email" name="email" placeholder="Email" value="<%= @suazo.email %>">            
                </div>                                    
            </div>
            <div class="modal-footer">
                <input type="hidden" name="userid" id="userid" value="<%= @suazo.id %>"/>                        
                <input type="hidden" name="action" id="action" value="<%= @suazo.id%>" />
                <input type="submit" name="save" id="save" class="btn btn-info" value="Save" />                    
            </div>
        </div>
    </form>
</div>
